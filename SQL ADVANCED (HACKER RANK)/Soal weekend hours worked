WITH hours_worked AS (
    SELECT
        emp_id,
        CASE 
            WHEN EXTRACT(MINUTE FROM TIMESTAMP) >= EXTRACT(MINUTE FROM LAG(TIMESTAMP) OVER(PARTITION BY DATE(TIMESTAMP), emp_id ORDER BY TIMESTAMP)) THEN EXTRACT(HOUR FROM TIMESTAMP) - EXTRACT(HOUR FROM LAG(TIMESTAMP) OVER(PARTITION BY DATE(TIMESTAMP), emp_id ORDER BY TIMESTAMP))
            ELSE EXTRACT(HOUR FROM TIMESTAMP) - EXTRACT(HOUR FROM LAG(TIMESTAMP) OVER(PARTITION BY DATE(TIMESTAMP), emp_id ORDER BY TIMESTAMP)) - 1
        END AS hours_worked
    FROM attendance
    WHERE WEEKDAY(TIMESTAMP) IN (5, 6)
)
SELECT
    emp_id,
    SUM(hours_worked) AS hours_worked
FROM hours_worked
GROUP BY emp_id
ORDER BY hours_worked DESC
